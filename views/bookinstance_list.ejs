<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Navigation Layout-->
        <%- include('layout') -%>

        <div class="col-sm-10 mt-3">
          <h1><%= title %></h1>
          <% if(bookinstance_list.length){ %>
          <ul>
            <% bookinstance_list.forEach(bookinstance => { %>
            <li>
              <a href="<%= bookinstance.url %>">
                <%= bookinstance.book.title %> : <%= bookinstance.imprint %>
                -&nbsp;</a
              >
              <% if(bookinstance.status === 'Available') { %>
              <small class="text-success">( <%= bookinstance.status %> )</small>
              <%} else if(bookinstance.status === 'Maintenance') { %>
              <small class="text-danger">( <%= bookinstance.status %> )</small>
              <% } else { %>
              <small class="text-warning">( <%= bookinstance.status %> )</small>
              <%}%> <% if(bookinstance.status != 'Available') { %>
              <small>(Due: <%= bookinstance.due_back_formatted %>)</small>
              <%}%>
            </li>
            <% }) %>
          </ul>
          <% } else { %>
          <p>There are no book copies in this library.</p>
          <% } %>
        </div>
      </div>
    </div>
  </body>
</html>
